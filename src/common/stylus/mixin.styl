$blue = #3190e8;
$bc =  #e4e4e4
$fc = #fff

// 字体大小,颜色
sc($size, $color)
  font-size: $size
  color: $color

// 宽高
wh($width, $height)
  width: $width
  height: $height

// flexd布局和子元素对齐方式
fj($type=space-between)
  display: flex
  justify-content: $type

// 定位上下居中
ct()
  position: absolute
  top:50%
  transform: translateY(-50%)

// 定位左右居中
cl()
  position: absolute
  left:50%
  transform: translateX(-50%)

// 字体大小 行高 字体
font($size, $line-height, $family=Microsoft YaHei)
  font-size:$size
  line-height: $line-height
  family: "Microsoft YaHei"

// 定位上下左右居中
center()
  position: absolute
  left: 50%
  top:50%
  transform: translate(-50%, -50%)

// 背景图片地址和大小
bis($url)
  background-image: url($url)
  background-repeat: no-repeat
  background-size:100% 100%

// 定位全屏
allcover()
  position: absolute
  top:0
  right:0
  